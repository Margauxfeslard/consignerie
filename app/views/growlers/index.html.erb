<%= render 'shared/navbar' %>
<div class="container-consignerie">
  <div class="stock-growler">
    <h1>Tes growlers</h1>
      <div class="stock-growler-1">
        <div class="logo-consignerie">
          <%= image_tag 'logo1.png' %>
        </div>
        <div class="litre">
          <p>1L</p>
        </div>
          <div class="stock-with-input">
            <div class="stock">
              <h3>Ton stock : <%= @small_growlers %>
              </h3>
            </div>
            <h3 class="demannde-echange">Combien souhaites-tu en échanger ?</h3>
            <input class="form-control form-control-sm echange1" type="text" placeholder="">
          </div>
        </div>
      <div class="stock-growler-1">
        <div class="logo-consignerie">
          <%= image_tag 'logo1.png' %>
        </div>
        <div class="litre">
          <p>2L</p>
        </div>
          <div class="stock-with-input">
            <div class="stock">
              <h3>Ton stock : <%= @big_growlers  %>
              </h3>
            </div>
              <h3 class="demannde-echange">Combien souhaites-tu en échanger ?</h3>
              <input class="form-control form-control-sm echange2" type="text" placeholder="">
          </div>
        </div>
        <div class="recap-echange">
          <h4></h4>
        </div>
    </div>
    <div class="container-droit">
      <%= render 'shared/layout_panier' %>
    </div>
  </div>
   <%= render 'shared/footer' %>
