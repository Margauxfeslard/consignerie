<div class="container-consignerie">
  <div class="container-gauche-show">

    <div class="show">

      <div class="logo-place">
        <%= image_tag @biere.logo_img, class:"logo-picture" %>
      </div>

      <div class="container-interne">
        <div class="carte-gauche">
          <h2><%= @biere.nom %></h2>
          <h3><%= @biere.style %></h3>
          <p>Les reviews des internautes</p>
        </div>
        <div class="carte-droite">
          <p>Ajout au panier</p>
        </div>
        <div class="carte-gauche">
          <h2>La bière</h2>
          <p><%= @biere.description %></p>
        </div>
        <div class="carte-droite">
          <h2>Caractéristiques</h2>
            <div class="caracteristiques">
              <div class="car-txt"><h3>Couleur</h3></div>
              <div class="car-schm"><%= render 'shared/couleurs_biere', biere: @biere %></div>
            </div>
            <div class="caracteristiques">
              <div class="car-txt"><h3>Alcool</h3></div>
                  <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">6%</div>
                  </div>
            </div>
            <div class="caracteristiques">
              <div class="car-txt"><h3>Amertume</h3></div>
                  <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
            </div>
            <div class="caracteristiques">
              <div class="car-txt"><h3>Apparence</h3></div>
                  <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Claire</div>
                  </div>
            </div>
        </div>
      </div>

    </div>

  </div>

  <div class="container-droit">
    <p>Mon panier</p>
  </div>

</div>

